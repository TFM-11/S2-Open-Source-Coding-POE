<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/titleText"
            android:text="About Us"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- About Us Content -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="About Us"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Anytime Car Wash is a leading car cleaning service provider in South Africa. Founded in 2020, we aim to deliver top-quality washes with convenience through our mobile app. Our team is dedicated to customer satisfaction and eco-friendly practices."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Contact Us: support@anytimecarwash.com"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/homeIcon"
                android:src="@drawable/home"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:text="Home"
                android:textColor="#0F0E0E"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bookingsIcon"
                android:src="@drawable/bookings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:text="Bookings"
                android:textColor="#090909"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileIcon"
                android:src="@drawable/profile"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:text="Profile"
                android:textColor="#0B0B0B"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>