<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeRootLayout"
    android:padding="8dp">

    <!-- AppBar -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/toolbar_gradient"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/titleText"
            android:text="ANYTIME CAR WASH"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:shadowColor="#80000000"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1" />
    </LinearLayout>

    <!-- Home Content -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Welcome Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/welcomeGreetingText"
                    android:text="Good Afternoon!"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/welcomeMessageText"
                    android:text="Welcome to Anytime Car Wash"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Wash Options Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/washOptionsText"
                    android:text="Wash Options"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <!-- Basic Wash -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/basicIcon"
                            android:src="@drawable/basic"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />

                        <TextView
                            android:id="@+id/basicText"
                            android:text="Basic Wash"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/basicPriceText"
                            android:text="R 500.00"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Premium Wash -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/premiumIcon"
                            android:src="@drawable/premium"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />

                        <TextView
                            android:id="@+id/premiumText"
                            android:text="Premium Wash"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/premiumPriceText"
                            android:text="R 1000.00"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Full Detail -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fullIcon"
                            android:src="@drawable/full"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />

                        <TextView
                            android:id="@+id/fullText"
                            android:text="Full Detail"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/fullPriceText"
                            android:text="R 2000.00"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weather Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E0F7FA"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:src="@drawable/ic_weather"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/weatherTitleText"
                        android:text="Weather Update"
                        android:textColor="#0288D1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/weatherInfoText"
                        android:text="22Â°C, Partly Cloudy"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/nav_bar_background">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/homeIcon"
                android:src="@drawable/home"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/homeText"
                android:text="Home"
                android:textColor="#0F0E0E"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bookingsIcon"
                android:src="@drawable/bookings"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/bookingsText"
                android:text="Bookings"
                android:textColor="#090909"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileIcon"
                android:src="@drawable/profile"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/profileText"
                android:text="Profile"
                android:textColor="#0B0B0B"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/settingsIcon"
                android:src="@drawable/settings"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/settingsText"
                android:text="Settings"
                android:textColor="#0B0B0B"
                android:textSize="12sp"
                android:layout_height="22dp"
                android:layout_width="50dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
