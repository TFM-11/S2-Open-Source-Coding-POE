<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/titleText"
            android:text="Privacy Policy"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Privacy Policy Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/privacy_title"
                android:text="Privacy Policy"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/privacy_content"
                android:text="At Anytime Car Wash, we value your privacy. This policy outlines how we collect, use, and protect your personal information. We do not share your data with third parties without your consent. For more details, contact us at support@anytimecarwash.com."
                android:textColor="#666666"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/last_updated_text"
                android:text="Last Updated: Nov 01, 2025"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/homeIcon"
                android:src="@drawable/home"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/home_text"
                android:text="Home"
                android:textColor="#0F0E0E"
                android:textSize="12sp"
                android:textIsSelectable="true"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bookingsIcon"
                android:src="@drawable/bookings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/bookings_text"
                android:text="Bookings"
                android:textColor="#090909"
                android:textSize="12sp"
                android:textIsSelectable="true"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileIcon"
                android:src="@drawable/profile"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/profile_text"
                android:text="Profile"
                android:textColor="#0B0B0B"
                android:textSize="12sp"
                android:textIsSelectable="true"
                android:layout_height="22dp"
                android:layout_width="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>